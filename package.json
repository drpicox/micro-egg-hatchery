{
  "name": "micro-egg-hatchery",
  "version": "1.0.0",
  "main": "index.js",
  "types": "dist/index.ts",
  "author": "David Rodenas",
  "license": "MIT",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm-run-all --parallel build:main build:types",
    "build:main": "kcd-scripts build --no-clean",
    "build:types": "tsc --allowJs -d --emitDeclarationOnly  src/index.js --outDir dist",
    "build:bundle:main": "kcd-scripts build --bundle --no-clean",
    "lint": "kcd-scripts lint",
    "test": "kcd-scripts test",
    "test:update": "npm test -- --updateSnapshot --coverage",
    "validate": "kcd-scripts validate",
    "setup": "npm install && npm run validate -s"
  },
  "husky": {
    "hooks": {
      "pre-commit": "kcd-scripts pre-commit"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "kcd-scripts": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "tsc": "^1.20150623.0",
    "typescript": "^3.7.5"
  }
}
